---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: {{ deployment_type }}-backup-claim
  namespace: {{ meta.namespace}}
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: {{ tower_postgres_storage_class }}
  resources:
    requests:
      storage: {{ tower_backup_size | default('5Gi', true) }}
